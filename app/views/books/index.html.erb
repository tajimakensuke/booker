<body>
    <header>
      <h1>Books</h1>
    </header>

    <main>
    <div class="flex">
    <div class="title-box">
      <h3 class="title">Title</h3>
      <% @books.each do |book| %>
      <p class="text"><%= book.title %>
      <% end %>
    </div>


    <div class="body-box">
      <h3 class="body">Body</h3>
      <% @books.each do |book| %>
      <p class="text"><%= book.body %></p>
      <% end %>
    </div>

    <div class="doing-box">
      <h3 class="doing">Doing</h3>
      <% @books.each do |book| %>
      <div class="doing-list">

      <p><%= link_to "show", book_path(book.id) %></p>
      <p><%= link_to "edit", edit_book_path(book.id) %></p>
      <p><%= link_to "Destroy", book_path(book), method: :delete,"data-confirm" => "Are you sure" %></p>

      </div>
      <% end %>
    </div>


      </div>


    </main>

    <create>
    <!-- form_with部分 -->
    <%= form_with model:@book, local:true do |f| %>
    <div class="new">
      <h1>New Book</h2>
      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Body</h4>
      <%= f.text_area :body %>

      <h4 > <%= f.submit 'Create Book' %></h4>
    </div>
    <% end %>
    </create>
</body>