<h1>Editing Book</h1>
<div class ="erreors_box">
      <% if @book.errors.any? %>
      <div class="render">
      <p class="erroor_message"><%= @book.errors.count %> error prohibited this book from being saved:</p>
        <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
        </ul>
      </div>
      <% end %>
    </div>

<%= form_with model:@book, local:true do |f| %>
<h4>title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>
<h4><%= f.submit 'Update Book' %></h4>
<% end %>

 <div class="edit_back">
      <p class="Show"><%= link_to "Show",book_path(@book.id) %></p>
      <p class="slash">  /  </p>
      <p class="Back"><%= link_to "Back",books_path %></p>
      </div>